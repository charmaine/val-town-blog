---
import { Image } from "astro:assets";
import andre from "../authors/andre.jpg";
import max from "../authors/max.jpg";
import tom from "../authors/tom.jpg";
import steve from "../authors/steve.jpg";
import jp from "../authors/jp.jpg";
const authors = {
    "Tom MacWright": tom,
    "André Terron": andre,
    "Steve Krouse": steve,
    "Max McDonnell": max,
    "JP Posma": jp,
};
interface Props {
	author: "Tom MacWright" |
    "André Terron" |
    "Steve Krouse" |
    "Max McDonnell" |
    "JP Posma"
}
const { author } = Astro.props;
const src = authors[author];
---
<style>
.avatar {
    border-radius: 4px;
    vertical-align: middle;
    margin-right: 2px;
    margin-top: -3px;
}
</style>

<Image
    densities={[1, 2, 3]}
    width="20"
    height="20"
    class="avatar"
    alt={author}
    title={author}
    src={src}
/>
